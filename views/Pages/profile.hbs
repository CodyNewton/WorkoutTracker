{{#> layout name="main" }}

<div class="container py-5 text-light">
  <div class="card bg-dark border border-secondary shadow-lg mx-auto" style="max-width: 500px;">
    <div class="card-body text-center">
      <i class="bi bi-person-circle display-1 text-secondary"></i>
      <h2 class="mt-3">{{user.username}}</h2>

      <div class="mt-4">
        <p><strong>Days Worked Out:</strong> {{user.weekly_workout_count}}</p>
        <p><strong>Total Weight Lifted:</strong> {{user.weekly_total_weight}} lbs</p>
      </div>

      <div class="mt-4">
        <a href="/profile/edit" class="btn btn-outline-light btn-sm">Edit Profile</a>
      </div>
    </div>
  </div>
</div>

{{/layout}}
