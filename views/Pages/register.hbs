{{#> layout name="main" }}
{{> message}}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
  <div class="card bg-black text-light border border-secondary shadow-lg px-4 py-5" style="max-width: 420px; width: 100%;">
    
    <div class="text-center mb-4">
      <i class="bi bi-person-plus-fill display-4 text-secondary"></i>
      <h2 class="mt-2 fw-semibold">Create Your Account</h2>
      <p class="text-muted">Join the workout community</p>
    </div>

    <form action="/register" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label text-uppercase small">Username</label>
        <input 
          type="text" 
          class="form-control bg-dark text-light border-secondary rounded-1 shadow-sm" 
          id="username" 
          name="username" 
          required
        >
      </div>

      <div class="mb-4">
        <label for="password" class="form-label text-uppercase small">Password</label>
        <input 
          type="password" 
          class="form-control bg-dark text-light border-secondary rounded-1 shadow-sm" 
          id="password" 
          name="password" 
          required
        >
      </div>

      <div class="d-grid mb-3">
        <button type="submit" class="btn btn-secondary btn-lg rounded-1">
          <i class="bi bi-person-check me-2"></i> Register
        </button>
      </div>
    </form>

    <div class="text-center mt-2">
      <small class="text-muted">Already have an account? <a href="/login" class="text-info text-decoration-none">Login</a></small>
    </div>
  </div>
</div>

{{/layout}}
